<div class="modal fade" id="details_<%=g.code %>" tabindex="-" role="dialog">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">
          Genre No : <%= g.code %>
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        
        <!-- Light table with hoverable rows -->
        <div class="table-responsive">
          <table class="table table-hover">
            <tbody>
              <tr>
                <th>Code</th>
                <td><%= g.code %></td>
              </tr>
              <tr>
                <th>Nom</th>
                <td><%= g.name %></td>
              </tr>
              <tr>
                <th>Slug</th>
                <td><%= g.slug %></td>
              </tr>
              <tr>
                <th>Nb. Livres</th>
                <td><%= g.books.length %></td>
              </tr>
              <tr>
                <th>Description</th>
                <td><%= g.description %></td>
              </tr>
              <tr>
                <th>Créé le</th>
                <td><%= moment(g.createdAt).format('DD/MM/YYYY') %></td>
              </tr>
              <tr>
                <th>Statut</th>
                <td>
                  <% if (g.status) { %>
                    <span class="badge bg-success">Actif</span>
                  <% } else { %>
                    <span class="badge bg-danger">Inactif</span>
                  <% } %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <div class="modal-footer">
        <a class="btn btn-secondary btn-sm" href="<%= routedebase %>/genre_management/edit_genre/<%= g.id %>">
          <i class="bx bxs-edit"></i> Modifier
        </a>
        <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">
          Fermer
        </button>
      </div>
    </div>
  </div>
</div>