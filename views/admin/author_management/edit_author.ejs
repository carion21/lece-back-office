<% extend('../base_admin') %>

<!-- Basic info -->
  <h2 class="h5 text-primary mb-4">
    Informations de base
  </h2>

  <div class="alert alert-warning">
    <strong>Attention!</strong> Les champs marqués d'un <span class="text-danger">*</span> sont obligatoires.
  </div>

  <form class="needs-validation border-bottom pb-3 pb-lg-4"
    enctype="multipart/form-data"
    action="<%= routedebase %>/author_management/edit_author/<%= author.id %>"
    method="POST"
    novalidate>

    <% if (locals.error) { %>
      <div class="alert alert-danger">
        <strong>Erreur!</strong> <%= locals.error %>
      </div>
    <% } %>

    <div class="row pb-2">
      <div class="col-sm-6 mb-4">
        <label for="name" class="form-label fs-base">
          Nom complet (Prenom NOM)
          <span class="text-danger">*</span>
        </label>
        <input type="text" id="name" class="form-control form-control-lg"
          name="name"
          value="<% if (locals.rbody) { %><%= rbody.name %><% } else { %><%= author.name %><% } %>"
          required>
        <div class="invalid-feedback">
          S'il vous plaît entrez un nom!
        </div>
      </div>
      <div class="col-sm-6 mb-4">
        <label for="email" class="form-label fs-base">
          Email
          <span class="text-danger">*</span>
        </label>
        <input type="text" id="email" class="form-control form-control-lg"
          name="email"
          value="<% if (locals.rbody) { %><%= rbody.email %><% } else { %><%= author.email %><% } %>"
          required>
        <div class="invalid-feedback">
          S'il vous plaît entrez un email!
        </div>
      </div>
      <div class="col-sm-12 mb-4">
        <label for="fl-textarea" class="form-label fs-base">
          Photo
          <span class="text-danger">*</span>
        </label>
        <input class="form-control form-control-lg" id="formFileLg" type="file"
          accept=".jpg, .jpeg, .png"
          max-size="10MB" name="photo" required>
      </div>
      <div class="col-sm-12 mb-4">
        <label for="biography" class="form-label fs-base">
          Biographie
        </label>
        <textarea id="biography" class="form-control form-control-lg"
          name="biography"
          rows="4"><% if (locals.rbody) { %><%= rbody.biography %><% } else { %><%= author.biography %><% } %></textarea>
      </div>
    </div>
    <div class="d-flex mb-3">
      <button type="reset" class="btn btn-secondary me-3">
        Annuler
      </button>
      <button type="submit" class="btn btn-primary">
        Enregistrer
      </button>
    </div>
  </form>