<% extend('../base_admin') %>

<div class="row justify-content-end">
  <div class="col-md-4">
    <a class="btn btn-outline-primary px-3 px-sm-4 mb-2 col-12"
      href="<%= routedebase %>/book_management/new_book">
      <i class="bx bx-layer-plus fs-xl me-sm-1"></i>
      <span class="d-none d-sm-inline">
        Ajouter un livre
      </span>
    </a>
  </div>
</div>

<% if (!locals.books) { %>
  <div class="alert alert-danger" role="alert">
    Une erreur s'est produite lors de la récupération des livres.
  </div>
<% } else if (locals.books && books.length == 0) { %>
  <div class="alert alert-warning" role="alert">
    Aucun livre n'a été trouvé.
  </div>
<% } else { %>
  <!-- Light table with hoverable rows -->
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Code</th>
          <th>Nom</th>
          <th>Statut</th>
          <th>Détails</th>
        </tr>
        </thead>
        <tbody>
          <% for (b of books) { %>
            <tr>
              <th scope="row">
                <%= books.indexOf(b) + 1 %>
              </th>
              <td>
                <%= b.code %>
              </td>
              <td>
                <%= b.title.toUpperCase() %>
              </td>
              <td>
                <% if (b.status) { %>
                  <span class="badge bg-success">Actif</span>
                <% } else { %>
                  <span class="badge bg-danger">Inactif</span>
                <% } %>
              </td>
              <td>
                <a class="btn btn-sm btn-outline-secondary"
                  href="<%= routedebase %>/book_management/view_book/<%= b.id %>">
                  <i class="bx bxs-detail fs-4"></i>
                </a>
              </td>
            </tr>
          <% } %> 
        </tbody>
    </table>
  </div>
<% } %>